@model CarShop.Viewmodels.Viewmodel
<div class="header_bottom_right_images">
    <div id="slideshow">
        <ul class="slides">
            <li><a href="#"><canvas></canvas><img src="~/Source/images/banner4.jpg" alt="Marsa Alam underawter close up"></a></li>
            <li><a href="#"><canvas></canvas><img src="~/Source/images/banner2.jpg" alt="Turrimetta Beach - Dawn"></a></li>
            <li><a href="#"><canvas></canvas><img src="~/Source/images/banner3.jpg" alt="Power Station"></a></li>
            <li><a href="#"><canvas></canvas><img src="~/Source/images/banner1.jpg" alt="Colors of Nature"></a></li>
        </ul>
        <span class="arrow previous"></span>
        <span class="arrow next"></span>
    </div>
    <div class="content-wrapper">
        <div class="content-top">
            <div class="box_wrapper">
                <h1>All News</h1>
            </div>
            <div class="text">
                @foreach (var item in Model.MainNews)
                {
                    <div class="grid_1_of_3 images_1_of_3">
                        <div class="grid_1">
                            <a href="@Url.Action("Single","News",new { id=item.ID})"><img src="~/Source/images/@item.Image" title="continue reading" style="width:260px;height:160px;"></a>
                            <div class="grid_desc">
                                @if (item.Title.Length > 20)
                                {
                                    <p class="title">@item.Title.Substring(0, 20)</p>
                                }
                                else
                                {
                                    <p class="title">@item.Title</p>
                                }
                                @if (item.Subtitle.Length > 20)
                                {
                                    <p class="title1">@item.Subtitle.Substring(0,20)</p>
                                }
                                else
                                {
                                    <p class="title1">@item.Subtitle</p>
                                }
                            </div>
                        </div><div class="clear"></div>
                    </div>

                }
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_PartialRightSidebar", Model.News)

